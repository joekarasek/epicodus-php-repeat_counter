{% if form %}
  <form action='/results'>
    <div class="form-group">
      <label for='phrase'>Enter a phrase to search through:</label>
      <input name='phrase' id='phrase' type='text' class='form-control'>
    </div>
    <div class="form-group">
      <label for='word_to_count'>Enter a word to count instances of in your phrase:</label>
      <input name='word_to_count' id='word_to_count' type='text' class='form-control'>
    </div>
    <button type='submit' class='btn btn-success'>Submit</button>
  </form>
{% endif %}
